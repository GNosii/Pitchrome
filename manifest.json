{
    "name": "__MSG_extensionname__",
    "description": "__MSG_extensiondescription__",
    "version": "1.2.1",
    "manifest_version": 3,

    "default_locale": "es",

    "content_scripts": [
        {
          "matches": ["*://www.youtube.com/watch?v=*"],
          "js": ["/background/YTBackground.js"]
        }
    ],

    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": false
    },

    "action": {
        "default_popup": "popup/Popup.html",
        "default_title": "Pitchrome",
        "default_icon": {
            "18": "/asset/mat_earbuds_18.png",
            "36": "/asset/mat_earbuds_36.png"
        }
    },

    "icons": {
        "48": "/asset/mat_earbuds.svg",
        "96": "/asset/mat_earbuds.svg"
    },

    "permissions": ["activeTab"]
}